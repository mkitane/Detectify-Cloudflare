{
    
    "name": "Detectify",
    "description": "Detectify is a SaaS based website security scanner that will help you stay safe. We audit your siteâ€™s security so you can focus on web development.",
    "version": "0.1",
    "category": "security monitoring",
    "main": "public/javascripts/app_module.js",
    "config":{
        "details":{
            "Language": "English",
            "Restrictions": "None",
            "TOS":"https://detectify.com/terms",
            "has_js": true
        }, 
        "assets":{
            "logos" : {
                "200px": "./public/images/logo-200.png",
                "132px": "./public/images/logo-132.png"
            },
            "detail_page" : [
                "./public/images/dashboard.png",
                "./public/images/plans.png"
            ],
            "images" : [
                "./public/images/counter.png"
            ]
        },
        "interface": [
            {
                "type": "select",
                "id": "display",
                "name": "Detectify badge?",
                "description": "Do you want to display our badge to prove your customers your site is secure?",
                "options": [
                    {
                        "label": "Yes, Bottom Right!",
                        "value": "1"
                    },
                    {
                        "label": "Yes, Bottom Left!",
                        "value": "2"
                    },
                    {
                        "label": "Yes, Top Right!",
                        "value": "3"
                    },
                    {
                        "label": "Yes, Top Left!",
                        "value": "4"
                    },
                    {
                        "label": "No",
                        "value": "0"
                    }
                ]
            }
        ]
    },
    "account": {
        "callback_url": "http://cloudflare-detectify.herokuapp.com/api",
        "user_fields": ["email"]
    },
    "billing": {
        "type": "zone",
        "plans":[
            {
                "name" : "Free",
                "price": "Free"
            },
            {
                "name" : "Independent developer",
                "price" : "50.00"
            },
            {
                "name" : "Professional",
                "price" : "130.00"
            }
        ]
    }
}